<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context="com.adityawiguna.wigunacinematickets.TotalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Berikut Pesanan Anda: "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/judulFilm"
        android:textSize="17sp"
        android:text="Judul Film"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jumlah"
        android:textSize="17sp"
        android:text="20.000 x 5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tambahan"
        android:textSize="17sp"
        android:text="Tambahan: Popcorn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:text="Tiket anda berhasil di pesan, silahkan melakukan pembayaran dengan nominal di bawah ini : "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="0"
        android:textSize="35sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:id="@+id/share"
        android:text="Share Ke Teman"
        android:layout_marginTop="20dp"/>

</LinearLayout>
