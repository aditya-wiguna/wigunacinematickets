<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adityawiguna.wigunacinematickets">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Ticket">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adityawiguna.wigunacinematickets.MenuActivity" />
        </activity>
        <activity android:name=".TotalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adityawiguna.wigunacinematickets.MainActivity" />
        </activity>
        <activity
            android:name=".Main2Activity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".ListFilmActivity"
            android:label="Film">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adityawiguna.wigunacinematickets.MenuActivity" />
        </activity>
        <activity android:name=".FilmActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adityawiguna.wigunacinematickets.ListFilmActivity" />
        </activity>
        <activity android:name=".TentangActivity" android:label="Tentang">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adityawiguna.wigunacinematickets.MenuActivity" />
        </activity>
    </application>

</manifest>